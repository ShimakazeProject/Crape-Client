            <GradientStop Color="#9929223A" Offset="0.6"/>
            <GradientStop Color="#442B2833" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Text="这是一个框架窗口" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="64"/>
    </Grid>
</Window>
