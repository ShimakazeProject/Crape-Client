<UserControl x:Class="Crape_Client.Windows.Campaign.Difficult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crape_Client.Windows.Campaign"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="难度设置:" FontSize="16" Foreground="#FFF" Height="24"/>
        <Grid Margin="10,5">
            <DockPanel Height="24" HorizontalAlignment="Left">
                <Label Content="简单" Foreground="#FFF" Height="24" Width="100"/>
                <Label Content="中等" Foreground="#FFF" Height="24" Width="100"/>
                <Label Content="困难" Foreground="#FFF" Height="24" Width="100"/>
            </DockPanel>
            <Slider Width="300" Height="24" x:Name="sDifficulty"
                HorizontalAlignment="Left" SmallChange="1" Maximum="2"
                Style="{StaticResource DifficultySlider}"/>
            <!--ValueChanged="Difficulty"-->
        </Grid>
        <Button Content="应用" Style="{StaticResource BtnInfoStyle}"
                Background="#FF494949" Height="20" Width="300"
                HorizontalAlignment="Left" Margin="10,5"/>
    </StackPanel>
</UserControl>
