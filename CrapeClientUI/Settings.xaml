<Page x:Class="Crape_Client.CrapeClientUI.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crape_Client.CrapeClientUI"
      mc:Ignorable="d" Width="800"
      Title="Settings" Height="600">
    <!--#region 设置-->
    <Border>
        <Grid>
            <ScrollViewer Style="{StaticResource DMScrollViewer}" HorizontalScrollBarVisibility="Disabled" Padding="10">
                <Grid>
                    <TextBlock Text="设置" FontSize="24" Height="32" Foreground="#fff" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBlock>
                    <Canvas Margin="0,40,0,0">
                        <GroupBox Header="显示设置" Foreground="#fff" Height="202" Width="190" Style="{StaticResource TitleBox_GroupBox}" Canvas.Top="10" Canvas.Left="10">
                            <Canvas>
                                <Label Content="分辨率" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="15" Canvas.Top="10"/>
                                <ComboBox x:Name="cbScreen"
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Top"
                                          Width="100" Height="24" 
                                          Canvas.Left="80" Canvas.Top="10" 
                                          Style="{StaticResource ComboBox}" 
                                          DropDownClosed="SetScreen">
                                    <ComboBoxItem Content="800x600"/>
                                    <ComboBoxItem Content="1024x768"/>
                                    <ComboBoxItem Content="1152x864"/>
                                    <ComboBoxItem Content="1280x720"/>
                                    <ComboBoxItem Content="1280x768"/>
                                    <ComboBoxItem Content="1280x800"/>
                                    <ComboBoxItem Content="1280x960"/>
                                    <ComboBoxItem Content="1280x1024"/>
                                    <ComboBoxItem Content="1360x768"/>
                                    <ComboBoxItem Content="1360x1024"/>
                                    <ComboBoxItem Content="1440x900"/>
                                    <ComboBoxItem Content="1680x1050"/>
                                    <ComboBoxItem Content="1776x1000"/>
                                    <ComboBoxItem Content="1920x1080"/>
                                </ComboBox>
                                <Label Content="画质" HorizontalAlignment="Left" Foreground="#fff" 
                                       VerticalAlignment="Top" Canvas.Left="15" Canvas.Top="37"/>
                                <ComboBox x:Name="cbDetailLevel" 
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" 
                                          Width="100" Height="24" 
                                          Canvas.Left="80" Canvas.Top="37" 
                                          Style="{StaticResource ComboBox}" 
                                          DropDownClosed="SeletDetailLevel" IsReadOnly="True">
                                    <ComboBoxItem Content="Low" Tag="0"/>
                                    <ComboBoxItem Content="Medium" Tag="1"/>
                                    <ComboBoxItem Content="High" Tag="2"/>
                                </ComboBox>
                                <Label Content="渲染器" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="15" Canvas.Top="64"/>
                                <ComboBox HorizontalAlignment="Left" 
                                          VerticalAlignment="Top" 
                                          Width="100" Height="24" 
                                          Canvas.Left="80" Canvas.Top="64" 
                                          Style="{StaticResource ComboBox}" IsReadOnly="True"/>
                                <!--
                                <Label Content="客户端分辨率" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="235" Canvas.Top="10"/>
                                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="24" Canvas.Left="322" Canvas.Top="10" Style="{StaticResource AduComboBox}"/>
                                -->
                                <CheckBox x:Name="cbNoFrame" Content="无边框" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="40" Canvas.Top="116" Checked="IsNoFrame" Unchecked="IsNoFrame" IsEnabled="False"/>
                                <CheckBox x:Name="cbWindowed" Content="窗口化" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="95" Checked="IsWindowed" Unchecked="IsWindowed"/>
                                <CheckBox x:Name="cbVideoBackBuffer" Content="视频内存缓存" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="137" Unchecked="VideoBackBuffer" Checked="VideoBackBuffer" />
                            </Canvas>
                        </GroupBox>
                        <!-- 音量控制 -->
                        <GroupBox x:Name="gbSoundSettings" Header="声音设置" Foreground="#fff" Height="280" Width="300" Style="{StaticResource TitleBox_GroupBox}" Canvas.Left="10" Canvas.Top="217">
                            <Canvas>
                                <Label Content="音乐音量" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="16" />
                                <Slider HorizontalAlignment="Left" Style="{StaticResource Slider_CustomStyle}"
                                        VerticalAlignment="Top" Width="200" x:Name="sSoundSetting"
                                        Maximum="1" LargeChange="0.3" Canvas.Left="90" Canvas.Top="14"
                                        ValueChanged="MusicSet"/>
                                <Label Content="音效音量" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Top="49" Canvas.Left="10" />
                                <Slider HorizontalAlignment="Left" Style="{StaticResource Slider_CustomStyle}"
                                        VerticalAlignment="Top" Width="200" x:Name="sScoreSetting"
                                        Maximum="1" LargeChange="0.3" Canvas.Left="90" Canvas.Top="47"
                                        ValueChanged="ScoreSet"/>
                                <Label Content="语音音量" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Top="82" Canvas.Left="10"/>
                                <Slider HorizontalAlignment="Left" Style="{StaticResource Slider_CustomStyle}"
                                        VerticalAlignment="Top" Width="200" x:Name="sVoiceSetting"
                                        Maximum="1" LargeChange="0.3" Canvas.Left="90" Canvas.Top="80"
                                        ValueChanged="VoiceSet"/>
                                <CheckBox x:Name="cbShuffleMusic" Content="随机播放游戏音乐" Style="{StaticResource CheckBox}"
                                          HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="115"
                                          Checked="IsShuffle" Unchecked="IsShuffle"/>

                                <Canvas Visibility="Hidden"
                                        Canvas.Top="155" Canvas.Left="10"
                                        Height="80" Width="280">
                                    <Label Content="客户端音量" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Top="2"/>
                                    <Slider HorizontalAlignment="Left" Style="{StaticResource Slider_CustomStyle}"
                                        VerticalAlignment="Top" Width="200"
                                        Maximum="1" LargeChange="0.3" Canvas.Left="80"/>
                                    <CheckBox Content="播放客户端音乐" Style="{StaticResource CheckBox}" 
                                              HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="40" />
                                    <CheckBox Content="不要在大厅播放音乐" Style="{StaticResource CheckBox}"
                                              HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="60" />
                                </Canvas>
                                
                            </Canvas>
                        </GroupBox>
                        <GroupBox Header="游戏设置" Foreground="#fff" Height="183" Width="375" Style="{StaticResource TitleBox_GroupBox}" Canvas.Top="10" Canvas.Left="205">
                            <Canvas>
                                <Label Content="卷动速率" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="15" Canvas.Top="14"/>
                                <CheckBox x:Name="cbScrollMethod" 
                                                      Checked="ScrollMethod"
                                                      Unchecked="ScrollMethod"
                                                      Content="惯性滚动" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="58"/>
                                <CheckBox x:Name="cbUnitActionLines" 
                                                      Checked="UnitActionLines"
                                                      Unchecked="UnitActionLines"
                                                      Content="显示目标线" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="79"/>
                                <CheckBox x:Name="cbShowHidden" 
                                                      Checked="ShowHidden"
                                                      Unchecked="ShowHidden"
                                                      Content="提示隐藏对象" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="190" Canvas.Top="58"/>
                                <CheckBox x:Name="cbToolTips"
                                                      Checked="ToolTips"
                                                      Unchecked="ToolTips"
                                                      Content="工具提示" Style="{StaticResource CheckBox}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="190" Canvas.Top="79"/>
                                <Label Content="游戏者名" HorizontalAlignment="Left" Foreground="#fff" VerticalAlignment="Top" Canvas.Left="15" Canvas.Top="104"/>
                                <TextBox x:Name="tbHandle" TextChanged="Handle"
                                         HorizontalAlignment="Left" 
                                         Height="23" TextWrapping="Wrap" VerticalAlignment="Top" 
                                         Width="260" Canvas.Left="95" Canvas.Top="107"/>
                                <Slider x:Name="sScrollRate" HorizontalAlignment="Left" Style="{StaticResource Slider_CustomStyle}"
                                        VerticalAlignment="Top" Width="210" SmallChange="1"
                                        Maximum="6" LargeChange="3" Canvas.Left="95" Canvas.Top="14" 
                                        ValueChanged="ScrollRate"/>

                            </Canvas>
                        </GroupBox>
                    </Canvas>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
    <!--#endregion-->
</Page>
