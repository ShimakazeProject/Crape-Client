<dmskin:DMSkinWindow x:Name="Window"
                     x:Class="Crape_Client.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:attached="clr-namespace:DMSkin.Attached;assembly=DMSkin"
                     xmlns:dmskin="clr-namespace:DMSkin;assembly=DMSkin"
                     xmlns:local="clr-namespace:Crape_Client"
                     mc:Ignorable="d"
                     Style="{DynamicResource AduWindowStyle}"
                     Title="Crape Client" Height="600" Width="1200"
                     SystemButtonSize="40"
                     FitSystemWindow="True"
                     Background="#2B2833"
                     WindowStartupLocation="CenterScreen" 
                     ResizeMode="NoResize" Icon="/Crape Client;component/Resource/Crape.ico" >
    <Border CornerRadius="4" Background="#302C3A" Name="mainback">
        <Grid>
            <!--#region 菜单列-->
            <Canvas HorizontalAlignment="Left" Width="200" Height="542">
                <Border Canvas.Top="0" BorderBrush="#2B2833" BorderThickness="0,0,1,0" Width="200" Height="60">
                    <TextBlock Text="Crape Client" FontWeight="Bold" Foreground="#fff" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                </Border>
                <ScrollViewer Style="{StaticResource DMScrollViewer}" HorizontalScrollBarVisibility="Disabled" Padding="10" Canvas.Top="75" Width="200">
                    <StackPanel Width="180" Canvas.Top="70">
                        <Expander Style="{StaticResource AduExpander}" Header="作战" Foreground="#FFF">
                            <StackPanel>
                                <RadioButton Foreground="#FFF"
                                             Style="{StaticResource AduRadioButtonMenu}"
                                             Command="{Binding NavPageCommand}"
                                             Content="战役" GroupName="Menu"
                                             attached:Icon.Height="16"
                                             attached:Icon.Width="16"
                                             Checked="Combat"
                                             IsChecked="False"/>
                                <RadioButton Foreground="#FFF"
                                             Style="{StaticResource AduRadioButtonMenu}"
                                             Content="遭遇战" GroupName="Menu"
                                             attached:Icon.Height="18"
                                             attached:Icon.Width="16"
                                             Checked="Skirmish"
                                             IsChecked="False" />
                                <RadioButton Foreground="#FFF"
                                             Style="{StaticResource AduRadioButtonMenu}"
                                             Content="载入" GroupName="Menu"
                                             attached:Icon.Height="18"
                                             attached:Icon.Width="16"
                                             Checked="Loadings"
                                             IsChecked="False" />
                            </StackPanel>
                        </Expander>
                        <Expander Style="{StaticResource AduExpander}" Header="网络">
                            <StackPanel>
                                <RadioButton
                                    Style="{StaticResource AduRadioButtonMenu}"
                                    Command="{Binding NavPageCommand}"
                                    Content="网际网络"
                                    GroupName="Menu"
                                    attached:Icon.Height="16"
                                    attached:Icon.Width="16"
                                    IsChecked="False" />
                                <RadioButton
                                    Style="{StaticResource AduRadioButtonMenu}"
                                    Content="局域网"
                                    GroupName="Menu"
                                    attached:Icon.Height="18"
                                    attached:Icon.Width="16"
                                    IsChecked="False" />
                            </StackPanel>
                        </Expander>
                        <RadioButton x:Name="rbmSettings"
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Content="设置" Foreground="#FFF"
                                    GroupName="Menu"
                                    attached:Icon.Height="16"
                                    attached:Icon.Width="16"
                                         Checked="Settings_check"
                                         Unchecked="Settings_check"
                                    IsChecked="False" />
                    </StackPanel>
                </ScrollViewer>
                <RadioButton Style="{StaticResource ExitRadioButtonMenu}"
                                         Content="退出"
                                         Foreground="#FFF"
                                         attached:Icon.Height="18"
                                         attached:Icon.Width="16"
                                         IsChecked="False" 
                                         Checked="Exit" VerticalAlignment="Top" Canvas.Bottom="10"  Width="180" Canvas.Left="10"/>
            </Canvas>
            <!--#endregion-->

            <Canvas>
                <Frame x:Name="ClientFrame" Width="974" 
                       NavigationUIVisibility="Hidden"
                       Canvas.Left="220" Canvas.Top="5"
                       Source="/Crape Client;component/CrapeClientUI/Welcome.xaml" 
                       HorizontalAlignment="Left"/>
            </Canvas>

        </Grid>
    </Border>
</dmskin:DMSkinWindow>