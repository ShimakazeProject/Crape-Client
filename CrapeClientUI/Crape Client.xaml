<Window x:Name="Window"  x:Class="Crape_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crape_Client"
        mc:Ignorable="d" Style="{StaticResource WindowStyle}"
        Title="Crape Client"
        Height="600" Width="1000"
        Background="#2B2833"
        WindowStartupLocation="CenterScreen"
        Icon="/Crape Client;component/Resource/Crape.ico" 
        ResizeMode="NoResize" >
    <Border CornerRadius="4" Background="#302C3A" Name="mainback">
        <Grid>
            <!--#region 菜单列-->
            <Canvas HorizontalAlignment="Left" Width="200" Height="600" VerticalAlignment="Top" Margin="0">
                <Path Stroke="Transparent" StrokeThickness="1">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#CC150738"  Offset="0"></GradientStop>
                            <GradientStop Color="#CC150738"  Offset="0.2"></GradientStop>
                            <GradientStop Color="#9929223A"  Offset="0.5"></GradientStop>
                            <GradientStop Color="#442B2833"  Offset="1"></GradientStop>
                        </LinearGradientBrush>
                    </Path.Fill>
                    <Path.Data>
                        <PathGeometry>
                            <!--定义PathGeometry的Figuress-->
                            <PathGeometry.Figures>
                                <PathFigureCollection>
                                    <PathFigure IsClosed="True" StartPoint="0,0">
                                        <PathFigure.Segments>
                                            <LineSegment Point="1000,0" />
                                            <LineSegment Point="1000,600"/>
                                            <LineSegment Point="0,600"/>
                                        </PathFigure.Segments>
                                    </PathFigure>
                                </PathFigureCollection>
                            </PathGeometry.Figures>

                        </PathGeometry>
                    </Path.Data>
                </Path>

                <!-- Logo -->
                <Grid Canvas.Top="0" Width="200" Height="60">
                    <TextBlock Text="Crape Client" FontWeight="Bold" 
                               FontSize="26" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Height="38" Margin="20,20,20,-25" RenderTransformOrigin="0.5,0.5" FontStyle="Italic" >
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Transparent" Offset="0.5"/>
                                <GradientStop Color="#50000000" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1"/>
                                <SkewTransform/>
                                <RotateTransform />
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="Crape Client" FontWeight="Bold" Foreground="#50EAEAEA" 
                               FontSize="26" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Margin="15,13,10,10"/>
                    <TextBlock Text="Crape Client" FontWeight="Bold" Foreground="#FFEAEAEA" 
                               FontSize="26" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />
                </Grid>
