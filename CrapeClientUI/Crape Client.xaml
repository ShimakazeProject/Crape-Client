                <RadioButton Canvas.Top="60" Canvas.Left="-32"
                             Style="{StaticResource MainMenuBattleButton}"
                             Content="战役" DataContext="Campaign"
                             GroupName="Menu" 
                             Checked="Combat" IsChecked="False"/>
                <RadioButton Canvas.Top="110" Canvas.Left="-32"
                             Style="{StaticResource MainMenuSkirmishButton}"
                             Content="遭遇战" DataContext="Skirmish"
                             GroupName="Menu" Checked="Skirmish" IsChecked="False" />
                <RadioButton Canvas.Top="160" Canvas.Left="-32"
                             Style="{StaticResource MainMenuLoadButton}"
                             Content="载入" DataContext="Loading"
                             GroupName="Menu" Checked="Loadings" IsChecked="False" />
                <RadioButton x:Name="rbmSettings"
                             Style="{StaticResource MainMenuSettingsButton}"
                             Content="设置"  DataContext="Settings"
                             Canvas.Top="210" Canvas.Left="-32"
                             GroupName="Menu" Checked="Settings" IsChecked="False" />
                <!--RadioButton 
                             Style="{StaticResource MainMenuExitButton}"
                             Content="网络"  DataContext="Net"
                             Canvas.Top="260" Canvas.Left="-32"
                             GroupName="Menu" Checked="Website" IsChecked="False" /-->
                <!--RadioButton Style="{StaticResource MainMenuExitButton}"
