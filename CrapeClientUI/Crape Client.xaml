                             IsChecked="False" GroupName="Menu" 
                             Checked="Website" VerticalAlignment="Top" Canvas.Bottom="60" Canvas.Left="-32"/-->
                <RadioButton Style="{StaticResource MainMenuExitButton}"
                             Content="退出" DataContext="Exit"
                             IsChecked="False" GroupName="Menu" 
                             Checked="Exit" VerticalAlignment="Top" Canvas.Bottom="10" Canvas.Left="-32"/>
            </Canvas>
            <!--#endregion-->
            <Frame x:Name="ClientFrame" 
                   NavigationUIVisibility="Hidden"
                   Source="/Crape Client;component/CrapeClientUI/Welcome.xaml" Margin="200,5,5,5"/>

        </Grid>
    </Border>
</Window>