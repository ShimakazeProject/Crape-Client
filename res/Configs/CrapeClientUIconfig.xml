<?xml version="1.0" encoding="utf-8"?>
<GUIconfigs>
  <MainWindowConfig Height="600" Width="1000" Title="Crape Client" Foreground="#FFF">
    <Background StartPoint="0, 0" EndPoint="1, 0">
      <GradientStop Color="#CC150738" Offset="0"/>
      <GradientStop Color="#CC150738" Offset="0.2"/>
      <GradientStop Color="#9929223A" Offset="0.6"/>
      <GradientStop Color="#442B2833" Offset="1"/>
    </Background>
    <Logo Left="0" Top="0" Width="200" Height="60"
          Text="Crape Client" FontSize="26" Foreground="#FFEAEAEA">
      <Projection Foreground="#50EAEAEA" 
                  Margin="17, 14, 10, 10"/>
      <Reflection Margin="20, 20, 20, -25" 
                  RenderTransformOrigin="0.5, 0.5" 
                  ScaleTransformY="-1">
        <LinearGradientBrush StartPoint="0.5, 0" 
                             EndPoint="0.5, 1">
          <GradientStop Color="#00000000" Offset="0.5"/>
          <GradientStop Color="#50000000" Offset="1"/>
        </LinearGradientBrush>
      </Reflection>
    </Logo>
    <MenuButton Left="-32" Width="210" Height="60">
      <Campaign Top="60" Content="战役" DataContext="Campaign"/>
      <Skirmish Top="110" Content="遭遇战" DataContext="Skirmish"/>
      <Loadings Top="160" Content="载入" DataContext="Loading"/>
      <Settings Top="210" Content="设置" DataContext="Settings"/>
    </MenuButton>
    <Exit Left="-32" Bottom="5" Width="210" Height="60"
          Content="退出" DataContext="Exit"/>
    <Frame Margin="200, 5, 5, 5"/>
  </MainWindowConfig>
  <Global>
    <Title FontSize="24" Foreground="#FFF" Height="32" Margin="5,5,5,0"/>
    
  </Global>
  <SaveLoader Title="载入">
    <DataGridTextColumn1 Header="存档名" Width="600"/>
    <DataGridTextColumn2 Header="日期"/>
  </SaveLoader>
  <Settings Title="设置">
    <Screen Title="显示设置">
      <Resolution Title="分辨率"/>
    </Screen>
  </Settings>
  
  

</GUIconfigs>